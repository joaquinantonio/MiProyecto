<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Divider">
        <item name="android:divider">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.TeleClinic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_A700</item>
        <item name="colorPrimaryVariant">@color/orange_A200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C62828</item>
        <item name="colorSecondaryVariant">#D84315</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange_A700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light"/>

</resources>